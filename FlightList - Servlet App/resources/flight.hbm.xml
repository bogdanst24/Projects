<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ass1.da.FlightEntity" table="flight">
		<meta attribute="class-description">
			This class contains the user detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="flightNumber" not-null="true" column="flightNumber" type="string" />
		<property name="airplaneType" not-null="true" column="airplaneType" type="string" />
		<property name="departureCity"  not-null="true" column="departureCity" type="string" />
		<property name="departureDatetime"  not-null="true" column="departureDatetime" type="string" />
		<property name="arrivalCity"  not-null="true" column="arrivalCity" type="string" />
		<property name="arrivalDatetime"  not-null="true" column="arrivalDatetime" type="string" />
	</class>
</hibernate-mapping>